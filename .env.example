# YouTracker Environment Configuration
# Copy this file to .env.development, .env.staging, or .env.production
# NEVER commit actual secrets to version control

# Environment type: development | staging | production
ENV=development

# API Configuration
# Your backend API base URL
API_BASE_URL=http://localhost:8080

# YouTube API base URL (usually don't need to change)
YOUTUBE_API_BASE_URL=https://www.googleapis.com/youtube/v3

# Request timeout in seconds
REQUEST_TIMEOUT_SECONDS=30

# Maximum retry attempts for API calls
MAX_RETRY_ATTEMPTS=3

# Sync Configuration
# Background sync interval in minutes
SYNC_INTERVAL_MINUTES=15

# Maximum concurrent sync operations
MAX_CONCURRENT_SYNC=3

# Security Configuration
# Enable certificate pinning (recommended for production)
CERTIFICATE_PINNING_ENABLED=false

# Session timeout in minutes
SESSION_TIMEOUT_MINUTES=60

# Feature Flags
# Enable background sync
BACKGROUND_SYNC_ENABLED=true

# Enable push notifications
PUSH_NOTIFICATIONS_ENABLED=true

# Enable analytics dashboard feature
ANALYTICS_FEATURE_ENABLED=true

# Diagnostics
# Enable debug mode (verbose logging, development features)
DEBUG_MODE=true

# Enable crash reporting (recommended for production)
CRASH_REPORTING_ENABLED=false

# Enable analytics collection
ANALYTICS_ENABLED=false

# Enable verbose logging
VERBOSE_LOGGING=true

# ==============================================================
# IMPORTANT SECURITY NOTES:
# ==============================================================
#
# 1. NEVER commit this file with real values to version control
#
# 2. For production builds, pass values via --dart-define:
#    flutter build apk --release --dart-define=API_BASE_URL=https://...
#
# 3. For CI/CD, store secrets in your platform's secret management:
#    - GitHub Actions: Repository secrets
#    - GitLab CI: CI/CD variables
#    - Azure DevOps: Variable groups
#
# 4. API keys should NEVER be in this file. Use backend token exchange
#    pattern instead (see lib/src/security/backend_token_exchange.dart)
#
# 5. The HIVE_ENCRYPTION_KEY is generated and stored automatically
#    in secure storage (flutter_secure_storage). Do not set it here.
#
# ==============================================================
